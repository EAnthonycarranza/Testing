<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      {{#if pets.length}}
        {{#each pets}}
          <div class="card mt-3">
            <div class="card-header bg-primary text-white">
              <h4>{{this.pet_name}}</h4>
            </div>
            <div class="card-body text-center">
              <img src="{{this.image_url}}" alt="{{this.pet_name}}" class="img-fluid rounded mb-3">
              <p>{{this.message}}</p>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="card mt-3">
          <div class="card-header bg-primary text-white">
            <h4>No pet photos found</h4>
          </div>
          <div class="card-body text-center">
            <p>Sorry, you haven't uploaded any pet photos yet.</p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
      <!-- Bottom Navigation Bar -->
    <nav class="navbar fixed-bottom navbar-light bg-light" id="bottomNavbar">
        <a class="navbar-brand">Companion Connect <i class="fas fa-paw"></i></a>
