<!-- CompanionConnect/views/login.handlebars -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h4><i class="fas fa-sign-in-alt mr-2"></i>Login</h4> <!-- Added a login icon -->
        </div>
        <div class="card-body">

          {{#if errorMessage}}
            <p class="text-danger">{{errorMessage}}</p>
          {{/if}}

          <form action="/api/users/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">
                <i class="fas fa-envelope mr-2"></i>Email</label> <!-- Added an email icon -->
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">
                <i class="fas fa-lock mr-2"></i>Password</label> <!-- Added a password icon -->
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-enhanced"> <!-- Added a class for enhanced button styling -->
              <i class="fas fa-sign-in-alt mr-2"></i>Login</button> <!-- Added a login icon -->
          </form>
          <p class="mt-3">Don't have an account? 
            <a href="/signup" class="btn btn-link">
            <i class="fas fa-user-plus mr-1"></i>Sign Up</a>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>

