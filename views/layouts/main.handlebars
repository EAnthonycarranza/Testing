<!DOCTYPE html>
<html>

<head>
    <title>Companion Connect</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Add the Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Companion Connect <i class="fas fa-paw"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    {{#unless isAuthenticated}}
                    <li class="nav-item active">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                    </li>
                    {{/unless}} {{#if isAuthenticated}}
                    <!-- If the user is authenticated, hide login, signup, and admin-login links -->
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/view-pets"> <i class="fas fa-paw"></i> View Pets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/post"><i class="fas fa-upload"></i> Upload Your Pets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/api/users/logout"><i class="fas fa-sign-out-alt"></i>
                            Logout</a>
                    </li>
                    {{else}}
                    <!-- If the user is not authenticated, show login, signup, and admin-login links -->
                    <li class="nav-item">
                        <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup"><i class="fas fa-user-plus"></i> Sign Up</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        {{{body}}}
    </div>
    <footer>
        <!-- Add your footer content here if needed -->
    </footer>
    <!-- Add the Bootstrap JS and jQuery links here -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    var topNavHeight = $('.navbar').height();

    // Initially hide the bottom navbar
    $('#bottomNavbar').addClass('hide-nav');

    $(window).scroll(function() {
        if ($(this).scrollTop() > topNavHeight) {
            $('#bottomNavbar').removeClass('hide-nav');
        } else {
            $('#bottomNavbar').addClass('hide-nav');
        }
    });

    // Logic for the arrow and comment icon buttons
    $('.btn-link').click(function() {
        var arrowButton = $(this).closest('.text-content').find('.arrow-collapse');
        if ($(this).attr('aria-expanded') === 'false') {
            arrowButton.show();
        } else {
            arrowButton.hide();
        }
    });

    // Anchor-based navigation to the top of the card when arrow is clicked
    $('.arrow-collapse').click(function() {
        var cardID = $(this).attr('href');
        $('html, body').animate({
            scrollTop: $(cardID).offset().top
        }, 500); // 500ms animation speed
    });
});
</script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
