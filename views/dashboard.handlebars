<!-- CompanionConnect/views/dashboard.handlebars -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- User Greeting and Introduction -->
            <div class="mb-4">
                <h2>Hello, {{username}}!</h2>
            </div>

<div class="card shadow-lg mb-5 rounded-lg">
<!-- Dashboard Title -->
<div class="card-header rounded-top d-flex align-items-center" 
     style="background: linear-gradient(135deg, #2c3e50, #34495e); 
            color: #FFF; 
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); 
            padding: 15px 20px;">
        <h4 class="mb-0 flex-grow-1">Dashboard</h4>
        <i class="fas fa-columns fa-lg"></i>
    </div>
<!-- User's Action List -->
<div class="card-body">
    <p class="lead font-weight-bold text-center" style="font-size: 1.2em; border-bottom: 2px solid #e1e1e1; padding-bottom: 10px; margin-bottom: 15px;">Here, you can view your pet images and select settings.</p>
    <div class="list-group mb-4">
        <a href="/your-pets" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center text-center" style="border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: all 0.3s ease;">
            Your Pets
            <span>
                <i class="fas fa-paw text-primary"></i>
            </span>
        </a>
        <a href="/account-settings" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center text-center mt-3" style="border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: all 0.3s ease;">
            Account Settings
            <span>
                <i class="fas fa-cogs text-secondary"></i>
            </span>
        </a>
        <a href="/api/users/logout" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mt-3 text-center text-danger" style="border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: all 0.3s ease;">
            Logout
            <span>
                <i class="fas fa-sign-out-alt text-danger"></i>
            </span>
        </a>
    </div>
</div>



<!-- Uploaded Pet Photos -->
<div class="card shadow-lg rounded-lg">
    <div class="card-header rounded-top d-flex align-items-center" 
         style="background: linear-gradient(135deg, #9fa8da, #b0bec5); 
                color: #FFF; 
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); 
                padding: 15px 20px;">
                    <h4>Your Uploaded Pet Photos</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        {{#if petPhotos}}
                            {{#each petPhotos}}
                                <div class="col-md-4 mb-4 d-flex flex-column align-items-center">
                                    <img src="{{image_url}}" alt="Pet Photo" class="img-fluid rounded mb-2">
                                    <button data-id="{{id}}" class="btn btn-danger btn-sm delete-photo-btn mt-auto">Delete <i class="fas fa-trash-alt"></i></button>
                                </div>
                            {{/each}}
                        {{else}}
                            <p class="col-12 text-muted">You haven't uploaded any pet photos yet. <i class="fas fa-sad-tear"></i></p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/dashboard.js"></script>
</div>
